<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/comm_cavaimage"
        android:layout_width="50px"
        android:layout_height="50px"
        android:src="@drawable/logo"
        android:layout_margin="@dimen/listview_image_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 名字 -->
        <TextView
            android:id="@+id/comm_unick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/listview_detail_margin"
            android:textSize="@dimen/listview_detail_font_size"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem" />

        <!--个人评分-->
        <TextView
            android:id="@+id/comm_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listview_detail_margin"
            android:layout_marginBottom="@dimen/listview_detail_margin"
            android:textColor="@color/colorGrade"
            android:textAppearance="?attr/textAppearanceListItem" />

        <!-- 个人评论 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/listview_detail_margin"
                android:layout_marginBottom="@dimen/listview_detail_margin"
                android:text="@string/grade"
                android:textSize="@dimen/listview_detail_font_size"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

        <!-- 评论时间 -->
        <TextView
            android:id="@+id/comm_creatime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listview_detail_margin"
            android:layout_marginBottom="@dimen/listview_detail_margin"
            android:textSize="@dimen/listview_detail_font_size"
            android:textAppearance="?attr/textAppearanceListItem" />

        <!-- 点赞 -->
        <TextView
            android:id="@+id/comm_agreetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listview_detail_margin"
            android:layout_marginBottom="@dimen/listview_detail_margin"
            android:textSize="@dimen/listview_detail_font_size"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</LinearLayout>
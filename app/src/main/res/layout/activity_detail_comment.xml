<?xml version="1.0" encoding="utf-8"?>
<com.lvyanhao.pullableview.FilmDetailPullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_comment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head" />

    <include layout="@layout/detail_item_layout" />

    <!-- 支持所有实现Pullable接口的View -->
    <com.lvyanhao.pullableview.PullableListView
        android:id="@+id/film_comment_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/divide_color"
        android:dividerHeight="1dp" />

    <include layout="@layout/load_more" />

</com.lvyanhao.pullableview.FilmDetailPullToRefreshLayout>